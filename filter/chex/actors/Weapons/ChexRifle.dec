ACTOR ChexRifle : PB_Weapon 
{
	Weapon.SelectionOrder 1300
	Weapon.AmmoUse1 0
	Weapon.AmmoUse2 0
	Weapon.AmmoGive1 0
	Weapon.AmmoGive2 0
	Scale 0.50
	Weapon.AmmoType1 "Cell"
	Weapon.AmmoType2 "ChexRifleAmmo"
	Inventory.PickupMessage "You got the super-duper secret Chex Quest-rifle! (Slot 6)"
    Inventory.PickupSound "PLSPICK"
	Obituary "%k got a Chex-weapon somehow and killed %o"
    AttackSound "None"
	Tag "Chex Quest assault rifle"
    +WEAPON.NOALERT
    +WEAPON.NOAUTOAIM
	+WEAPON.NOAUTOFIRE
	+WEAPON.AMMO_OPTIONAL
	States
	{
	Spawn:
		CRRS A -1 
		Loop
	Pickup:
		TNT1 A 0
		{
			if(CountInv("ChexWeaponLooked") < 1)
			{
				A_GiveInventory("ChexRifleAmmo",42);
				A_GiveInventory("Cell",126);
				return;
			}
			else
			{
				A_GiveInventory("Cell",42);
				return;
			}
		}
		stop
	Select:
		TNT1 A 0 {
			A_WeaponOffset(0,32);
			A_SetRoll(0);
			A_SetCrosshair(0);
			A_TakeInventory("PB_LockScreenTilt",1);
			A_ClearOverlays(10,11);
		}
		TNT1 A 0 A_Overlay(-10, "FirstPersonLegsStand")
		TNT1 A 0 A_Takeinventory("HasUnloaded",1)
		TNT1 A 0 A_Takeinventory("Unloading",1)
		TNT1 A 0 A_TakeInventory("RifleSelected",1)
		TNT1 A 0 A_TakeInventory("CarbineSelected",1)
		TNT1 A 0 A_TakeInventory("FistsSelected",1)
		TNT1 A 0 A_TakeInventory("SawSelected",1)
		TNT1 A 0 A_TakeInventory("SledgeSelected",1)
		TNT1 A 0 A_TakeInventory("HandgunSelected",1)
		TNT1 A 0 A_TakeInventory("DualHandgunSelected",1)
		TNT1 A 0 A_TakeInventory("RevolverSelected",1)
		TNT1 A 0 A_TakeInventory("ShotgunSelected",1)
		TNT1 A 0 A_TakeInventory("SSGSelected",1)
		TNT1 A 0 A_TakeInventory("ASGSelected",1)
		TNT1 A 0 A_TakeInventory("QSGSelected",1)
		TNT1 A 0 A_TakeInventory("MinigunSelected",1)
		TNT1 A 0 A_TakeInventory("NewChaingunSelected",1)	
		TNT1 A 0 A_TakeInventory("RocketLauncherSelected",1)
		TNT1 A 0 A_TakeInventory("GrenadeLauncherSelected",1)
		TNT1 A 0 A_TakeInventory("SGLSelected",1)
		TNT1 A 0 A_GiveInventory("PlasmaGunSelected",1)
		TNT1 A 0 A_TakeInventory("M2Selected",1)	
		TNT1 A 0 A_TakeInventory("FreezerSelected",1)
		TNT1 A 0 A_TakeInventory("RailGunSelected",1)
		TNT1 A 0 A_TakeInventory("BFGSelected",1)
		TNT1 A 0 A_TakeInventory("BFGBeamSelected",1)
		TNT1 A 0 A_TakeInventory("BHCSelected",1)
		TNT1 A 0 A_TakeInventory("RevenantLauncherSelected",1)
		TNT1 A 0 A_TakeInventory("FlameCannonSelected",1)
		TNT1 A 0 A_TakeInventory("HellRifleSelected",1)
		TNT1 A 0 A_TakeInventory("LandMineSelected",1)
		TNT1 A 0 A_TakeInventory("UACSMGSelected",1)
		TNT1 A 0 A_TakeInventory("SubMachineGunSelected",1)
		TNT1 A 0 A_TakeInventory("LostSoulSelected",1)
		TNT1 A 0 A_TakeInventory("HasBarrel",1)
		TNT1 A 0 A_TakeInventory("HasBurningBarrel",1)
		TNT1 A 0 A_GiveInventory ("JustGotAChexWeapon")
		TNT1 A 0 A_Giveinventory("HasPlasmaWeapon",1)
		TNT1 A 0 A_Raise
		Wait
	RespectAnimation:
		TNT1 A 0 A_TakeInventory ("JustGotAChexWeapon", 1)
		TNT1 A 0 A_JumpIfInventory("ChexWeaponLooked", 1, "Ready")
		TNT1 A 0 A_GiveInventory ("ChexWeaponLooked", 1)
		CRR1 ABCDEFGHIKLMNOPQRSTVXYZ 1
		CRR2 ABCD 1 
		TNT1 A 0 { 
		A_SpawnItem("PinkIonFlare",30,0);
		A_SpawnItemEx("ChexParticleS", 10, 10, 0, 0, 0, 0, 0, 128);
		A_SpawnItem("PurplePlasmaFlare",10,0);
		A_SpawnItem("PinkIonFlare",40,0);
		A_SpawnItemEx("ChexParticleS", 20, -10, 0, 0, 0, 0, 0, 128);
		A_SpawnItem("PurplePlasmaFlare",10,-30);
		A_SpawnItem("ChexParticleSpawn",50,0);
		A_SpawnItemEx("ChexParticleS", 30, 10, 0, 0, 0, 0, 0, 128);
		A_SpawnItem("ChexParticleSpawn",30,0);
		}
		TNT1 A 0 A_PlaySound("PLSOFF")
		CRR2 EFGHIKLMNOPQRSTVXYZ 1 A_SetRoll (roll+1.5)
		CRR3 ABCD 1 A_SetRoll (roll-1.5)
		TNT1 A 0 A_PlaySound("CELLPKUP")
		CRR3 EFGHIKLMNOPQ 1 A_SetRoll (roll-1.5)
		TNT1 A 0 A_PlaySound("PLREADY")
		CRR3 RSTVXYZ 1 A_SetRoll (roll+1.5)
		CRR4 ABCDEFG 1 A_SetRoll (roll+1.5)
		CRR4 HIKLMN 1 A_SetRoll (roll-1.5)
		TNT1 A 0 A_SetRoll(0)
		Goto RealReady
	Ready:
		TNT1 A 0 A_PlaySound("PLSDRAW")
		TNT1 A 0 A_JumpIfInventory("JustGotAChexWeapon", 1, "RespectAnimation")
		CHRS DCBA 1
		Goto RealReady
	Ready3:
	RealReady: 
		CRR2 N 0 A_JumpIfInventory ("UnloadedChexRifle", 1, 2)
		CHRE E 0
		"####" "#" 1 A_DoPBWeaponAction
		Loop
	/*
	AltFire:
		TNT1 A 0 A_JumpIfInventory("ChexRifleAmmo", 1, 2)
		Goto Reload
		TNT1 AAA 0
		CXXA ABCD 1
		TNT1 A 0 A_PlaySound("PLSC_1", 1)
		CXXA ABCD 1
		TNT1 A 0 A_PlaySound("PLSC_2", 1)
		CXXA ABCD 1 
		TNT1 A 0 A_PlaySound("PLSC_3", 1)
		CXXA ABCD 1
		TNT1 A 0 A_PlaySound("PLSC_4", 1)
	AltHold:
		TNT1 A 0 A_JumpIfInventory("ChexRifleAmmo", 1, 2)
		Goto Reload
		TNT1 AAA 0
		TNT1 A 0 A_PlaySound("PAILGF2",3)
		TNT1 A 0 A_TakeInventory("ChexRifleAmmo", 1)
		TNT1 A 0 A_Recoil(1)
		TNT1 A 0 A_SetPitch(pitch-3)
		CXAF ABCD 1 Bright {
			A_FireCustomMissile ("ChexLightningModeProjectile", 0, 0, random(-10, 10), random(20, -20));
			A_FireCustomMissile ("ChexLightningModeProjectile", 0, 0, random(-20, 20), random(-1, 14));
			A_FireCustomMissile ("ChexLightningModeProjectile", 0, 0, random(-6, 16), random(6, 19));
		}
		TNT1 A 0 A_Refire
	*/
	Fire:
		TNT1 A 0 A_JumpIfInventory("ChexRifleAmmo", 1, 2)
		Goto Reload
		TNT1 AAA 0
		TNT1 A 0 A_PlaySound("weapons/chexrifle/fire",3)
		TNT1 A 0 A_AlertMonsters
		TNT1 A 0 A_ZoomFactor(.985)
		TNT1 A 0 A_FireCustomMissile("ChexProjectile", 0, 1, 0, 0)
		TNT1 A 0 A_FireCustomMissile("ShakeYourAssMinor", 0, 0, 0, 0)
		TNT1 A 0 A_SpawnItem("PinkIonFlare",14,30,0,0)
		CHRE F 1 BRIGHT
		{
			A_ZoomFactor(.970);
			A_WeaponReady(WRF_NOPRIMARY);
		}
		CHRE G 1 BRIGHT
		{
			A_ZoomFactor(.965);
			A_WeaponReady(WRF_NOPRIMARY);
		}
		CHRE H 1 BRIGHT
		{
			A_ZoomFactor(.985);
			A_WeaponReady(WRF_NOPRIMARY);
		}
		TNT1 A 0 A_Takeinventory("ChexRifleAmmo",1)
		CHRE I 2 BRIGHT A_WeaponReady(WRF_NOPRIMARY)
		TNT1 A 0 A_ZoomFactor (1)
		TNT1 A 0 A_Refire
		Goto RealReady
	Deselect:
		CHRS ABCD 1
	RealDeselect:
		TNT1 A 0 A_Lower
		Wait
	Reload:
		TNT1 A 0 A_TakeInventory ("Reloading")
		TNT1 A 0 A_JumpIfInventory ("ChexRifleAmmo", 42, "RealReady")
		TNT1 A 0 A_JumpIfInventory ("Cell", 1, "ReloadAnimation")
		Goto RealReady
	ReloadAnimation:
		TNT1 A 0 A_JumpIfInventory ("UnloadedChexRifle",1,"ReloadAnimationIfUnloaded")
		TNT1 A 0 A_TakeInventory ("UnloadedChexRifle")
		CXR2 XWVUTS 1 A_SetRoll(roll-1.2)
		CXR2 RQPO 1 A_SetRoll(roll+1.8)
		CXR2 NML 1 A_SetRoll(roll+0.4)
		CXR2 KJI 1
		CXR2 H 1
		CXR2 GFEDCB 1 A_SetRoll (roll+2.0)
		TNT1 A 0 A_PlaySound ("PLSOFF", 3)
		CXR2 A 1
		CXR1 ZY 1
		TNT1 A 0 A_SetRoll(roll-3.0)
		CXR1 XWVUTSRQPON 1
		TNT1 A 0 A_PlaySound ("CELLPKUP", 6)
		CXR1 N 2
		CXR1 NOPQRSTUVWX 1
		TNT1 A 0 A_SetRoll(roll-3.0)
		CXR1 YZ 1
		CXR2 A 1 A_SetRoll (roll+3)
		/*
		CXR2 BCDEFGHIJKLMNOPQRSTUV 1
		CXR2 WXZ 1 A_SetRoll (roll+3)
		CXR2 A 1
		*/
		CXR2 BCDEFGH 1 A_SetRoll (roll-2.0)
		CXR2 IJK 1
		CXR2 LMN 1 A_SetRoll(roll-0.4)
		CXR2 OPQR 1 A_SetRoll(roll-1.8)
		CXR2 STUVWX 1 A_SetRoll(roll+1.2)
		TNT1 A 0 A_SetRoll (0)
	ReloadSequence:
		TNT1 A 0 A_JumpIfInventory ("Cell", 1, 2)
		Goto RealReady
		TNT1 A 0
		TNT1 A 0
		TNT1 A 0 A_JumpIfInventory ("ChexRifleAmmo", 42, "RealReady")
		TNT1 A 0 {
			A_GiveInventory ("ChexRifleAmmo",1);
			A_TakeInventory ("Cell",1);
		}
		loop
	WeaponSpecial:
		TNT1 A 0 A_TakeInventory ("GoWeaponSpecialAbility")
		Goto RealReady
	ReloadAnimationIfUnloaded:
		TNT1 A 0 A_TakeInventory ("UnloadedChexRifle")
		CXR1 ABCD 1 A_SetRoll (roll-2)
		CXR1 FG 1 A_SetRoll (roll-2)
		CXR1 HI 1 A_SetRoll (roll+2)
		CXR1 JKLM 1 A_SetRoll (roll+2)
		CXR1 NOPQRSTUVWXYZ 1 A_SetRoll (roll+0.2)
		CXR2 A 1 A_SetRoll (roll+0.2)
		CXR2 BCDE 1 A_SetRoll (roll-0.2)
		CXR2 FGHIJKLMN 1
		CXR2 OPQR 1 A_SetRoll (roll-1.0)
		CXR2 ST 1
		CXR2 UVWX 1 A_SetRoll (roll+0.5)
		TNT1 A 0 A_SetRoll (0)
		Goto ReloadSequence
	Unload:
		TNT1 A 0 A_TakeInventory ("Unloading")
		TNT1 A 0 A_JumpIfInventory("ChexRifleAmmo", 1, "UnloadAnimation")
		Goto RealReady
	UnloadAnimation:
		TNT1 A 0 A_TakeInventory ("Unloading")
		TNT1 A 0 A_GiveInventory ("UnloadedChexRifle",1)
		CXR2 XWVUTS 1 A_SetRoll(roll-1.2)
		CXR2 RQPO 1 A_SetRoll(roll+1.8)
		CXR2 NML 1 A_SetRoll(roll+0.4)
		CXR2 KJI 1
		CXR2 H 1
		CXR2 GFEDCB 1 A_SetRoll (roll+2.0)
		TNT1 A 0 A_PlaySound ("PLSOFF", 3)
		CXR2 A 1
		CXR1 ZY 1
		TNT1 A 0 A_SetRoll(roll-3.0)
		CXR1 XWVUTSRQPON 1
		TNT1 A 0 A_PlaySound ("CELLPKUP", 6)
		CXR1 N 2
		CXR1 MLKJIHG 1
		TNT1 A 0 A_SetRoll(roll-0.6)
		CXR1 FEDCBA 1
		TNT1 A 0 A_SetRoll(0)
	UnloadSequence:
		TNT1 A 0 A_JumpIfInventory ("ChexRifleAmmo", 1, 2)
		Goto RealReady
		TNT1 A 0
		TNT1 A 0
		TNT1 A 0 {
			A_GiveInventory ("Cell",1);
			A_TakeInventory ("ChexRifleAmmo",1);
		}
		Loop
		
	FlashKicking:
	    TNT1 A 0 A_WeaponOffset(0,32)
		CXR1 BCDEFG 1
		CXR1 H 2
		CXR1 GFEDCB 1
		Stop
		
	FlashAirKicking:
	    TNT1 A 0 A_WeaponOffset(0,32)
		CRR4 N 1
		CRR4 M 1 
		CRR4 L 1 
		CRR4 K 1
		CRR4 J 1 
		CRR4 I 2 
		CRR4 H 5 
		CRR4 I 2 
		CRR4 J 1 
		CRR4 K 1 
		CRR4 L 1 
		CRR4 M 1 
		CRR4 N 1 
		Stop
		
	FlashSlideKicking:
	    TNT1 A 0 A_WeaponOffset(0,32)
		CRR4 ML 2
		CRR4 JIIIIIII 2 A_WeaponOffset(random(-2,2),random(32,34)) 
		Stop
		
	FlashSlideKickingStop:
		TNT1 A 0 A_WeaponOffset(0,32)
		CRR4 I 2
		CRR4 JKLM 1 
		CRR4 N 1
		Stop
		
	FlashPunching:
		TNT1 A 0 A_WeaponOffset(0,32)
		S4T2 B 1 
		S4T2 C 1 
		S4T2 D 1 
		S4T2 E 7
		S4T2 D 1 
		S4T2 C 1 
		S4T2 B 1
		S4T2 A 1 
		Stop
}
}
		